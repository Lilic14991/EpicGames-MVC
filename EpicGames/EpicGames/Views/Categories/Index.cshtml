@model IEnumerable<EpicGames.Models.Category>
@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@Html.ActionLink("Add new category", "New")
@if (!Model.Any())
{
    <p>We don't have any category yet.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Category</th>     
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    
                    <td>@category.CName</td>

                    <td>@Html.ActionLink("Edit", "Edit", new { id = category.CategoryID })</td>
                    <td>@Html.ActionLink("Delete", "Delete", new { id = category.CategoryID })</td>
                    <td>@Html.ActionLink("Details", "Details", new { id = category.CategoryID })</td>

                </tr>
            }
        </tbody>


    </table>
}

